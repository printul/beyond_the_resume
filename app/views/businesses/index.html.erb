<div class="container">
  <h1 class="text-center">All businesses</h1>

  <p><%= link_to "add a business", new_business_path, class:"btn btn-primary" %></p>

   <table class="listing table-hover table-condensed" summary="Businesses list">
      <tr class="header">
        <th>Name</th>
        <th>Address</th>
        <th>City</th>
        <th>Zipcode</th>
        <th>Phone Number</th>
        <th>Industry</th>
        <th>Actions</th>
      </tr>
      <% @businesses.each do |business| %>
      <tr>
        <td><%= link_to(business.name, business_path(business)) %></td>
        <td><%= business.address %></td>
        <td><%= business.city %></td>
        <td><%= business.zipcode %></td>
        <td><%= business.phone_number %></td>
        <td><%= business.industry %></td>
        <td class="actions">
          <%= link_to "Edit", edit_business_path(business), class:"btn btn-info" %>
          <%= link_to "New_Post", new_business_posting_path(business), class:"btn btn-success" %>
          <%= link_to "Delete", business_path(business), method: :delete, class:"btn btn-danger" %>
        </td>
      </tr>
      <% end %>
    </table>
</div>

