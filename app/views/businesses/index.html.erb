<div class="container">
  <h1 class="text-center">My businesses</h1>

  <p><%= link_to "add a business", new_business_path, class:"btn btn-primary" %></p>

   <table class="listing table-hover table-condensed">
      <tr class="header">
        <th>Name</th>
        <th>Address</th>
        <th>City</th>
        <th>Zipcode</th>
        <th></th>
        <th>Postings</th>
        <th>Applications</th>
      </tr>
      <% @businesses.each do |business| %>
      <tr data-link="<%= business_path(business) %>">
        <td><%= business.name %></td>
        <td><%= business.address %></td>
        <td><%= business.city %></td>
        <td><%= business.zipcode %></td>
        <td class="actions">
          <%= link_to "Edit", edit_business_path(business), class:"btn btn-info" %>
          <%= link_to "Create Post", new_business_posting_path(business), class:"btn btn-success" %>
          <%= link_to "Delete", business_path(business), method: :delete, class:"btn btn-danger" %>
        </td>
        <td><%= business.postings.count %></td>
        <td><%= business.applications.count %></td>
      </tr>
      <% end %>
    </table>
</div>

