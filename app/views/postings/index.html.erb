<div id="page-content-wrapper">
<div class="container-fluid">
  <div class="row">
  <div class="col-lg-12">
    <h1>All job postings</h1>
  <% @postings.each do |posting| %>
  <div class="col-sm-6 col-md-4">
    <div class="thumbnail">
      <%= image_tag "posting.jpg", class:"avatar-square" %>
      <div class="caption">
        <p><%= link_to posting.title, posting_path(posting) %></p>
        <p><%= posting.description %></p>
      </div>
    </div>
  </div>
  <% end %>
  </div>
</div>
</div>
</div>




<table class="Postings">
    <tr class="header">
      <th>Title</th>
      <th>Description</th>
      <th>Active?</th>
      <th>Views</th>
      <th>Created at</th>
      <th>Actions</th>
    </tr>
    <% @postings.each do |posting| %>
    <tr>
      <td><%= posting.title %></td>
      <td><%= posting.description %></td>
      <td><%= posting.is_active? %></td>
      <td><%= posting.views %></td>
      <td><%= posting.created_at %></td>
      <td class="actions">
        <%= link_to("Show", posting_path(posting)) %>
        <%= link_to("Delete", posting_path(posting), method: :delete ) %>
      </td>
    </tr>
    <% end %>
  </table>

