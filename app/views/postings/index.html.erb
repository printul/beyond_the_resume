<div class="fixed-navbar fixed-sidebar">
   <div id="page-content-wrapper">
    <div class="container">
  <p class="pull-left"><%= pluralize(@postings.count, 'Posting')%></p>
      <div class="row">
        <% @postings.each do |posting| %>
            <div class="col-xs-12">
                <%= link_to posting_path(posting) do %>
                  <div class="card">
                    <div class="card-category"><%= posting.business.name %></div>
                    <div class="card-description">
                      <h2><%= posting.title %></h2>
                      <p><%= truncate(posting.description, length: 150) %></p>
                    </div>
                    <%= image_tag "#{posting.business.logo}", class: "card-user avatar" %>
                  </div>
                </div>
            <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>







