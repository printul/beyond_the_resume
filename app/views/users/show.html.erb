<div class="fixed-navbar fixed-sidebar">
  <div class="container">
    <div class="row">
      <div class="col-xs-12 col-md-8">
        <div class="row">
          <div class="box flex-default">
            <div class="box-content">
              <%= image_tag (current_user.photo || "https://s3.amazonaws.com/whisperinvest-images/default.png") %>
            </div>
            <div class="box-content">
              <h2><%= current_user.first_name %> <%= current_user.last_name %></h2>
              <p>
                Professions: <% Profession.all.each do |profession| %>
                <%= profession.name %>
                <% end %>
                </p>
              <p>Email: <%= current_user.email %></p>
              <br>
              <p>Phone number: <%= current_user.phone_number %></p>
              <br>
              <p>See your resume</p>
              <hr>
              <p>You joined us on <%= current_user.created_at %></p>
              <p>You have uploaded <%= current_user.videos.count %> <% if current_user.videos.count == 1 %> video <% else %> videos <% end %>, last upload on <%= current_user.videos.last.created_at %></p>

<div class="modal fade" id="updateModal" tabindex="-1" role="dialog" aria-labelledby="updateModal" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">

      <div class="modal-header">
        <h5 class="modal-title" id="updateModalLabel"><strong>Edit my profile</strong></h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>

      <div class="modal-body">
        <%= simple_form_for @user do |f| %>
          <%= f.input :first_name %>
          <%= f.input :last_name %>
          <%= f.input :phone_number %>
          <%= f.input :email %>
          <%= f.input :is_searchable? %>
          <p>Profession</p>
          <%= f.simple_fields_for :professions do |profession_form| %>
            <%= profession_form.input :name %>
          <% end %>
          <%= f.submit %>
        <% end %>
      </div>
      </div>
    </div>
  </div>
</div>
  <div>
    <%= link_to "#", { :id => 'async_btn', :class => 'btn', 'data-toggle' => 'modal', 'data-target' => '#updateModal'} do %>
    <span class="glyphicon glyphicon-pushpin" />
    <% end %>
    <%#= link_to 'Edit my profile', "#", class:"btn btn-span-width", data: { toggle: "modal", target:"#updateModal"} %>
  </div>

<!--   <button type="button" class="btn btn-default btn-lg">
  <span class="glyphicon glyphicon-star" aria-hidden="true"></span> Star
</button> -->

  </div>
    </div>
        <div class="row">
          <div class="col-xs-12 col-md-6 no-padding">
            <div class="box box-left">
              <div class="box-content box-profile-small">
                <p>Edit Profile</p>
                <hr>
                <p>Manage your CV</p>
                <hr>
                <p>Placeholder</p>
                <hr>
                <p>Placeholder</p>
                <hr>
                <p>Placeholder</p>
                <hr>
                <p>Placeholder</p>
                <hr>
                <p>Placeholder</p>
              </div>
            </div>
          </div>
          <div class="col-xs-12 col-md-6 no-padding">
            <div class="box box-right">
              <div class="box-content box-profile-small">
                <div class="row box-row-padded">
                <div class="box-title-skills">
                  <h3>
                    Skills
                  </h3>
                </div>
                <div class="box-add-skill">
                  <%= image_tag 'icons/core/plus.svg'%>
                </div>
                </div>
                  <div class="row box-row-padded text-center flexbox">
                  <% Skill.all.each do |skill| %>
                    <div class="skill">
                      <span>
                          <%= skill.name %>
                      </span>
                    </div>
                    <% end %>
                  </div>
                </div>
            </div>
          </div>
        </div>
      </div>
      <div class="col-xs-12 col-md-4 no-padding">
        <div class="box" style="height: 710px; ">
          <div class="box-content">
            <div class="row">
              <%= button_to 'View All Your Videos', videos_path, method: :get, class: "btn-span-width" %>
            </div>
            <div class="row box-row-vert-padded">
            <% current_user.videos.first(4).each do |video| %>
              <div class="col-xs-8">
              <%= link_to video_path(video) do %>
                <%= image_tag "http://"+video.image_url, class: "img-thumbnail" %>
              </div>
              <div class="col-xs-4">
                <h4>Bleh</h4>
                <p>Meh</p>
              </div>
              <% end %>
            <% end %>
            </div>

            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>




