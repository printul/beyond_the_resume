<div class="row">
  <div class="col-sm-8">

    <div class="container flexbox text-center">
      <div class="card" id = "you">
      <p id = "tag"> You </p>
      </div>
    </div>

    <div class="container flexbox text-center">
      <div class="card" id = "personal_page">
      <%#= image_tag "profile_pic.png", class:"avatar-large" %>
        <div class="card-left">
          <div class="avatar-large margin-middle" style="background-image: url('<%= image_path "profile_pic.png" %>');">

          </div>
        </div>

        <div class="card-right">
          <p><strong>First name:</strong> <%= current_user.first_name %></p>
          <p><strong>Last name:</strong> <%= current_user.last_name %></p>
          <p><strong>Email:</strong> <%= current_user.email %></p>
          <p><strong>Phone:</strong> <%= current_user.phone_number %></p>
          <p><strong>Make your profile searchable?</strong> <%= current_user.is_searchable? %></p>
          <p><strong>Resume:</strong> <%= current_user.resume %></p>
          <p><strong>Last sign_in:</strong> <%= current_user.last_sign_in_at %></p>
          <p><strong>Profession:</strong>
          <% current_user.professions.each do |profession| %>
          <%= profession.name %>
          <% end %>
          </p>
        </div>
      </div>
    </div>


    <div class="container flexbox text-center">
      <div class="card" id = "settings">
        <ul id="settings">
          <li>Edit profile</li>
          <hr />
          <li>Set site preferences</li>
          <hr />
          <li>Modify privacy preferences</li>
          <hr />
          <li>Change email & password</li>
          <hr />
          <li>Manage your CV</li>
        </ul>
      </div>
      <div class="card" id = "skills">
        <p>Skills</p>
      </div>
    </div>

  </div>
</div>



