<h1>Your video</h1>
<p><%= @video.title %></p>
<p><%= @video.url %></p>
<p><%= @video.description %></p>

<p><%= link_to "Go to all videos", videos_path %></p>
<p><%= link_to "Delete video", video_path(@video), method: :delete %></p>

<ziggeoplayer ziggeo-video='<%= @video.url %>'
    ziggeo-width=640
    ziggeo-height=480>
</ziggeoplayer>


