<%= simple_form_for @video do |f| %>
  <%= f.input :title %>
  <%= f.input :url %>
  <%= f.input :description %>
  <%= f.submit %>
<% end %>
<ziggeo ziggeo-limit=15
  ziggeo-width=320
  ziggeo-height=240
  ziggeo-title='<%= current_user.id %>'>
</ziggeo>
<ziggeorecorder ziggeo-timelimit=15
  ziggeo-width=320
  ziggeo-height=240
  ziggeo-theme='modern'
  ziggeo-title='<%= current_user.id %>'
  id="myRecorder">
</ziggeorecorder>
