<ziggeo ziggeo-limit=15
  ziggeo-width=640
  ziggeo-height=480
  ziggeo-tags='<%= current_user.id %>'
  ziggeo-perms='forbidrerecord'>
</ziggeo>

<script>
  ZiggeoApi.Events.on("submitted", function ( data ) {
    function redirectShowPage() {
      window.location.replace('/videos/' + data.video.token);
    };

    setTimeout(redirectShowPage, 3000);
  });
</script>
