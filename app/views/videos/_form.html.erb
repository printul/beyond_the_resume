<%= simple_form_for @video do |f| %>
  <%= f.input :title %>
  <%= f.input :url %>
  <%= f.input :description %>
  <%= f.submit %>
<% end %>
<ziggeo ziggeo-limit=15
  ziggeo-width=640
  ziggeo-height=480
  ziggeo-tags='<%= current_user.id %>'>
</ziggeo>
<ziggeorecorder ziggeo-timelimit=15
  ziggeo-width=640
  ziggeo-height=480
  ziggeo-theme='modern'
  ziggeo-tags='<%= current_user.id %>'
  id="myRecorder">
</ziggeorecorder>
